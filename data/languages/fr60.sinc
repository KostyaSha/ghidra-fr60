:BTSTL #u4, @ri is op8=0x88 & u4 & ri {
    local res:1 = u4:1 & *:1 ri;
    # lower 4 bits stored directly to CCR regs
    N = (0b00001000 & res) != 0;
    Z = (0b00000100 & res) != 0;
    V = (0b00000010 & res) != 0;
    C = (0b00000001 & res) != 0;
}

:BTSTH #u4, @ri is op8=0x89 & u4 & ri {
    local res:1 = (u4:1 << 4) & *:1 ri;
    # upper 4 bits stored directly to CCR regs
    N = (0b10000000 & res) != 0;
    Z = (0b01000000 & res) != 0;
    V = (0b00100000 & res) != 0;
    C = (0b00010000 & res) != 0;
}

