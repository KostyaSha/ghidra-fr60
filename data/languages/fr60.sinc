:LSL rj, ri is op8=0xb6 & rj & ri {
    local shiftAmount = rj & 0x1f;
    ri = ri << shiftAmount;

    C = ((ri << shiftAmount -1) & 0x80000000) != 0;
    resultFlags(ri);
}

:LSL #usignedi_4, ri is op8=0xb4 & usignedi_4 & ri {
    local shiftAmount = usignedi_4 & 0x1f;
