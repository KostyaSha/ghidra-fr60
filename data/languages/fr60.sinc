:ANDCCR #u8 is op8=0x83 & u8 {
    S = S & ((0b00100000 & u8:1) != 0);
    I = I & ((0b00010000 & u8:1) != 0);
    N = N & ((0b00001000 & u8:1) != 0);
    Z = Z & ((0b00000100 & u8:1) != 0);
    V = V & ((0b00000010 & u8:1) != 0);
    C = C & ((0b00000001 & u8:1) != 0);
}

:ORCCR #u8 is op8=0x93 & u8 {
    S = S | ((0b00100000 & u8:1) != 0);
    I = I | ((0b00010000 & u8:1) != 0);
    N = N | ((0b00001000 & u8:1) != 0);
    Z = Z | ((0b00000100 & u8:1) != 0);
