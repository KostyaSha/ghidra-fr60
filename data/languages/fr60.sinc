# ====

macro resultFlags(result) {
    N = (result s< 0);
    Z = (result == 0);
}

macro addFlags(result, val1, val2) {
    resultFlags(result);
    V = scarry(val1, val2);
    C = carry(val1, val2);
}

macro subFlags(result, val1, val2) {
    resultFlags(result);
    V = sborrow(val1, val2);
    C = (val1 < val2);
}

macro mulFlags64(val1, val2) {
    N = (MDL s< 0);
    Z = (MD == 0);
    V = (val1 != 0 && (val1 > (0xFFFFFFFFFFFFFFFF / val2)));
}

macro loadCCR() {
    S   = (PS & 0b00100000) != 0;
    I   = (PS & 0b00010000) != 0;
    N   = (PS & 0b00001000) != 0;
    Z   = (PS & 0b00000100) != 0;
    V   = (PS & 0b00000010) != 0;
    C   = (PS & 0b00000001) != 0;
}

macro loadProgramStatus() {
    local ilm_sft:4 = (PS & 0b11110000000000000000) >> 16;
    ILM = ilm_sft:1;
    D1  = (PS & 0b0000010000000000) != 0;
    D0  = (PS & 0b0000001000000000) != 0;
    T   = (PS & 0b0000000100000000) != 0;
    loadCCR();
}

